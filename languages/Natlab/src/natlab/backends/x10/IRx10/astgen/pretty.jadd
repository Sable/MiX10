static int PPHelper.getSize(ArrayList shape){
	  int size;
	  size = shape.size();
		if (size >= 1 && shape.get(0).toString().equals("1")) {
			size = 1;
		}
		return size;
  }

static String PPHelper.makeArgs(List<IDInfo> argsList) 
{
	StringBuffer s = new StringBuffer();
	int size;
	if (argsList.getNumChild()>0){
		
		if (!isScalar(argsList.getChild(0))){
		
			
			if(null != argsList.getChild(0).getShape()){
			if (null == argsList.getChild(0).getdidShapeChange() || false == argsList.getChild(0).getdidShapeChange()){
			s.append(argsList.getChild(0).getName()+": Array_"+ getSize(argsList.getChild(0).getShape())+"["+argsList.getChild(0).getType().getName()+"]");
			}
				else{
				s.append(", "+argsList.getChild(0).getName()+": Array["+argsList.getChild(0).getType().getName()+"]");
			}	
			}
			else{
				s.append(", "+argsList.getChild(0).getName()+": Array["+argsList.getChild(0).getType().getName()+"]");
			}
		}
		else
	s.append(argsList.getChild(0).getName()+": "+argsList.getChild(0).getType().getName());
	for (int i=1; i<argsList.numChildren ; i++)
	{	
		if (!isScalar(argsList.getChild(i))){
			if(null != argsList.getChild(i).getShape()){
			if (false == argsList.getChild(i).getdidShapeChange()){
				s.append(argsList.getChild(i).getName()+": Array_"+getSize(argsList.getChild(i).getShape())+"["+argsList.getChild(i).getType().getName()+"]"
						);
				}
				else{
				s.append(", "+argsList.getChild(i).getName()+": Array["+argsList.getChild(i).getType().getName()+"]");
			}	
			}
				else{
			s.append(", "+argsList.getChild(i).getName()+": Array["+argsList.getChild(i).getType().getName()+"]");
				}
		}
		else		
		s.append(", "+argsList.getChild(i).getName()+": "+argsList.getChild(i).getType().getName());
	}
	}
	return s.toString();
}

static boolean PPHelper.isScalar(IDInfo id) {
	  
	if (null != id.getShape())
	  for (int i =0 ; i<id.getShape().size();i++){
		  if (null==id.getShape().get(i) || !("1").equals(id.getShape().get(i).toString()) ){
			  return false;
			  
		  }
	  }
	return true;
}

String StmtBlock.pp(String indent, Boolean useNewArray)
{
